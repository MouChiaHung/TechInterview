<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@android:color/white">
    <ScrollView
        android:id="@+id/firstCardDetailScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/firstCardDetailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/firstCardDetailImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/firstCardDetailArticleTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstCardDetailImageView"
                android:paddingLeft="@dimen/intrinsic_padding"
                android:paddingRight="@dimen/intrinsic_padding"
                android:paddingBottom="12dp"
                android:text="article title"
                android:textAppearance="@style/TextAppearance.Title" />
            <TextView
                android:id="@+id/firstCardDetailArticleContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstCardDetailArticleTitleTextView"
                android:layout_marginBottom="@dimen/intrinsic_padding"
                android:paddingLeft="@dimen/intrinsic_padding"
                android:paddingRight="@dimen/intrinsic_padding"
                android:autoLink="all"
                android:textAppearance="@style/TextAppearance.Second"
                android:text="article content"/>
            <RelativeLayout
                android:id="@+id/firstDetailCardTimeRankContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstCardDetailArticleContentTextView"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/firstDetailCardArticleDateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/home_card_time_created"
                    android:textSize="12sp"
                    android:text="date"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"/>
                <TextView
                    android:id="@+id/firstDetailCardArticleRankTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/first_photo_item_sideline"
                    android:textSize="12sp"
                    android:text="rank"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/firstCardDetailSnackBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/light_gray"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:text=""/>
</RelativeLayout>
