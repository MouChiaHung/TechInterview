<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/firstHomeCardArticleContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@color/first_card_background">
                <ImageView
                    android:id="@+id/firstHomeCardArticlePhotoImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/holo_red_dark"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/firstHomeCardArticleTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF262629"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:text="article title"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"/>
                <TextView
                    android:id="@+id/firstHomeCardArticleContentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF262629"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="article content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"/>
                <RelativeLayout
                    android:id="@+id/firstHomeCardTimeRankContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/firstHomeCardArticleDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/home_card_time_created"
                        android:textSize="12sp"
                        android:text="date"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="@dimen/card_margin"
                        android:layout_marginLeft="@dimen/card_margin"/>
                    <TextView
                        android:id="@+id/firstHomeCardArticleRankTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/first_photo_item_sideline"
                        android:textSize="12sp"
                        android:text="rank"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="@dimen/card_margin"
                        android:layout_marginLeft="@dimen/card_margin"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
